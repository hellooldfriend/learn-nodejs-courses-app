<h1>Edit {{ course.title }}</h1>

<form action="/courses/edit" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" value="{{ course.title }}">
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Enter the name"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="text" class="validate" required min="1" value="{{ course.price }}">
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Enter the price"></span>
  </div>

  <div class="input-field">
    <input id="image" name="image" type="text" class="validate" value="{{ course.image }}">
    <label for="image">Course image</label>
    <span class="helper-text" data-error="Enter the image"></span>
  </div>


  <input type="hidden" name="id" value="{{ course.id }}">

  <button class="btn btn-primary">Edit</button>
</form>